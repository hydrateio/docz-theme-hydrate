{
  "extends": "./ts/tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "baseUrl": "src",
    "paths": {
      "@ui/*": [
        "components/ui/*"
      ],
      "@shared/*": [
        "components/shared/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**"
  ]
}